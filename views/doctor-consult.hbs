<!DOCTYPE html>

<html>
    <head>
        <title>Add Consultation</title>
        <link rel="stylesheet" media="all" href="../css/all.css" type="text/css">
		<link rel="stylesheet" media="all" href="../css/header-footer.css" type="text/css">
		<link rel="stylesheet" media="all" href="../css/containers.css" type="text/css">
		<link rel="stylesheet" media="all" href="../css/buttons.css" type="text/css">
    </head>

    <body>
        <div class="web-container"> <!-- Flexbox for Account and Info -->
            <div class="account-container"> <!-- Info -->
                <div>
                    <div class="flextri">
                        <img src="picture.png" style="width: 200px; height: 200px; border-radius: 50%;">
                    </div>
                    <div class="name">Dr. {{ name }}</div>
                    <a href="/doctor/home"><button>Home</button></a>
                    <a href="/doctor/{{ link }}"><button>Doctor Information</button></a>
                    <a href="/doctor/add-consult"><button>Add Consultation</button></a>
                    <a href="/doctor/invite"><button>Invite Patients</button></a>
                    <a href="/doctor"><button>Logout</button></a>
                </div>
                
            </div>

            <div style="width: 100%;">
                <header class="flextri"><h1>{{ patient_name }}</h1></header>
                <div class="content-container">
                    <div class="search-container">
                        <label for="find-pat">Search </label>
                        <input type="text" id="find-pat" name="find-pat">
                    </div>
                    <div class="home-container">
                        <div>
                            {{#each records}}
                            <div class="consult-container">
                                <h3>{{ this.title }}</h3>
                                <p>{{ date }}</p> <br>
                                <p>{{ this.info }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer></footer>
    </body>
</html>